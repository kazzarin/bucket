{
    "version": "0.10.0",
    "description": "An experimental package management solution for Python",
    "homepage": "https://rye-up.com/",
    "license": "MIT",
    "suggest": {
        "vcredist": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/mitsuhiko/rye/releases/download/0.10.0/rye-x86_64-windows.exe#/rye.exe",
            "hash": "c0109e8a9ab9cf173a85959d51b6ca3f778c631207f17d4a07e4f6c3948ae156"
        },
        "32bit": {
            "url": "https://github.com/mitsuhiko/rye/releases/download/0.10.0/rye-x86-windows.exe#/rye.exe",
            "hash": "7cdf2319938d79fabee4cb800f4ced81d4aa87f580274f00116374dcfaf716e7"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\config.toml\")) {",
        "    New-Item -Path \"$dir\\config.toml\" | Out-Null",
        "}"
    ],
    "post_install": [
        "& \"$dir\\rye.exe\" self install --yes",
        "Remove-Item \"$dir\\rye.exe\""
    ],
    "env_add_path": "shims",
    "env_set": {
        "RYE_HOME": "$persist_dir"
    },
    "persist": [
        "self",
        "shims",
        "py",
        "tools",
        "config.toml"
    ],
    "checkver": {
        "github": "https://github.com/mitsuhiko/rye"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/mitsuhiko/rye/releases/download/$version/rye-x86_64-windows.exe#/rye.exe"
            },
            "32bit": {
                "url": "https://github.com/mitsuhiko/rye/releases/download/$version/rye-x86-windows.exe#/rye.exe"
            }
        },
        "hash": {
            "url": "$url.sha256"
        }
    }
}
