{
    "version": "9.1.6.14",
    "description": "A lightweight, versatile image viewer",
    "homepage": "https://imageglass.org",
    "license": "GPL-3.0-only",
    "suggest": {
        ".NET Desktop Runtime": "extras/windowsdesktop-runtime",
